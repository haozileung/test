<table
	class="table table-striped table-hover table-busered table-condensed"
	id='resultList'>
	<thead>
		<tr>
			<th>UserID</th>
			<th>用戶名</th>
			<th>E-mail</th>
			<th>狀態</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		#foreach( $user in $page.result )
		<tr>
			<td>$user.id</td>
			<td>$user.username</td>
			<td>$user.email</td>
			<td>$user.status</td>
			<td><a href="javascript:void(0);">修改</a><a
				href="javascript:void(0);">禁用</a></td>
		</tr>
		#end
	</tbody>
</table>
<div>第$page.pageNo頁, 共$page.totalPages頁,共$page.totalCount筆
		<a href="javascript:void(0);" onclick="toPage(1);">第一頁</a>
		#if($page.hasPre)
		<a href="javascript:void(0);" onclick="toPage($page.prePage);">上一頁</a>
		#end #if($page.hasNext)
		<a href="javascript:void(0);" onclick="toPage($page.nextPage);">下一頁</a>
		<a href="javascript:void(0);" onclick="toPage($page.totalPages);">最後一頁</a>
		#end 前往第
		<input size="2" id="pageNumber"></input>頁
		<input class="liteoption" type="button"
			onClick="toPage($('#pageNumber').val());" value="Go" />
</div>